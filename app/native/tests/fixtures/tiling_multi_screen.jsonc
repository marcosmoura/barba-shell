{
  // Multi-screen tiling configuration for integration tests
  // Tests workspaces assigned to different screens
  // - "main-dwindle" workspace on main screen (dwindle layout)
  // - "main-monocle" workspace on main screen (monocle layout)
  // - "secondary-dwindle" workspace on secondary screen (dwindle layout)
  // - "secondary-grid" workspace on secondary screen (grid layout)
  "tiling": {
    "enabled": true,
    "workspaces": [
      {
        "name": "main-dwindle",
        "layout": "dwindle",
        "screen": "main",
        "rules": [
          { "appId": "com.apple.Dictionary" },
          { "appName": "Dictionary" }
        ]
      },
      {
        "name": "main-monocle",
        "layout": "monocle",
        "screen": "main"
      },
      {
        "name": "secondary-dwindle",
        "layout": "dwindle",
        "screen": "secondary",
        "rules": [
          { "appId": "com.apple.TextEdit" },
          { "appName": "TextEdit" }
        ]
      },
      {
        "name": "secondary-grid",
        "layout": "grid",
        "screen": "secondary"
      },
      {
        "name": "fallback",
        "layout": "floating",
        "screen": "main"
      }
    ],
    "gaps": {
      "inner": 8,
      "outer": 12
    },
    "animations": {
      "enabled": false
    },
    "borders": {
      "enabled": false
    }
  },
  "notunes": {
    "enabled": false
  },
  "menuAnywhere": {
    "enabled": false
  }
}
